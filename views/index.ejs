<% include templates/top.ejs %>
	
				<div class="right">
					<div class="rt-span">
					<span class="glyphicon glyphicon-camera icon-bg-grey"></span> &nbsp <%=upl.length %>
					</div>
					<div class="rt-span">

					<% for(var i = 0; i < upl.length; i++){ %>
						<a href="/pages/uploaded/<%= upl[i].id %>"><div class="thumb-placeholder">
					<img src="../img/<%= upl[i].filename %>" width="100%" height="100%" alt="<%= upl[i].caption %>" />
						</div></a>
					<% } %>

					</div>

					<div class="form-contain" id="form-contain">
					<form action="/uploads" method="post" enctype="multipart/form-data">
						<label for="image">Choose Photo</label>
						<input type="file" name="img">
						<label for="caption">Add Tags</label>
						<input type="text" name="tag" /><br>
						<label for="caption">Caption</label>
						<textarea name="caption" placeholder="Write a Caption..."></textarea>
						<input type="submit" name="submit" value="Upload" class="submit">
					</form>
					</div>
				</div>

